<div class="flex flex-col space-y-1">
  <div class="flex items-center space-x-2">
    <p class="truncate text-sm text-gray-500 dark:text-gray-400">
      Stake Pool
      address: <%= link_to "https://explorer.aptoslabs.com/account/#{validator.address}?network=#{network}", class: "cursor-pointer", target: "_blank" do %>
        <%= validator.address %>
      <% end %>
    </p>
    <svg
      id="copy-stake-pool-icon"
      class="w-5 h-5 text-gray-400 dark:text-gray-500 cursor-pointer hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-300"
      viewBox="0 0 40 40"
      xmlns="http://www.w3.org/2000/svg"
      onclick="copyToClipboard('<%= validator.address %>', 'copy-stake-pool-icon')"
    >
      <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd" d="M13.3333 8.33333C13.3333 6.49238 14.8257 5 16.6666 5H29.1666C31.0076 5 32.5 6.49238 32.5 8.33333V24.1667C32.5 26.0076 31.0076 27.5 29.1666 27.5H16.6666C14.8257 27.5 13.3333 26.0076 13.3333 24.1667V8.33333ZM29.1666 8.33333L16.6666 8.33333V24.1667H29.1666V8.33333Z"></path>
      <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd" d="M8.33332 14.1665C9.2538 14.1665 9.99999 14.9127 9.99999 15.8332V29.1665C9.99999 30.087 10.7462 30.8332 11.6667 30.8332H24.1667C25.0871 30.8332 25.8333 31.5794 25.8333 32.4998C25.8333 33.4203 25.0871 34.1665 24.1667 34.1665H11.6667C8.90523 34.1665 6.66666 31.9279 6.66666 29.1665V15.8332C6.66666 14.9127 7.41285 14.1665 8.33332 14.1665Z"></path>
    </svg>
  </div>
  <div class="flex items-center space-x-2">
    <p class="truncate text-sm text-gray-500 dark:text-gray-400">
      Operator
      address: <%= link_to "https://explorer.aptoslabs.com/account/#{validator.operator_address}?network=#{network}", class: "cursor-pointer", target: "_blank" do %>
        <%= validator.operator_address %>
      <% end %>
    </p>
    <svg
      id="copy-operator-icon"
      class="w-5 h-5 text-gray-400 dark:text-gray-500 cursor-pointer hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-300"
      viewBox="0 0 40 40"
      xmlns="http://www.w3.org/2000/svg"
      onclick="copyToClipboard('<%= validator.operator_address %>', 'copy-operator-icon')"
    >
      <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd" d="M13.3333 8.33333C13.3333 6.49238 14.8257 5 16.6666 5H29.1666C31.0076 5 32.5 6.49238 32.5 8.33333V24.1667C32.5 26.0076 31.0076 27.5 29.1666 27.5H16.6666C14.8257 27.5 13.3333 26.0076 13.3333 24.1667V8.33333ZM29.1666 8.33333L16.6666 8.33333V24.1667H29.1666V8.33333Z"></path>
      <path fill="currentColor" fill-rule="evenodd" clip-rule="evenodd" d="M8.33332 14.1665C9.2538 14.1665 9.99999 14.9127 9.99999 15.8332V29.1665C9.99999 30.087 10.7462 30.8332 11.6667 30.8332H24.1667C25.0871 30.8332 25.8333 31.5794 25.8333 32.4998C25.8333 33.4203 25.0871 34.1665 24.1667 34.1665H11.6667C8.90523 34.1665 6.66666 31.9279 6.66666 29.1665V15.8332C6.66666 14.9127 7.41285 14.1665 8.33332 14.1665Z"></path>
    </svg>
  </div>
</div>
<style>
    @keyframes spinAndFade {
        0% {
            transform: rotate(0deg);
            color: inherit;
        }
        50% {
            transform: rotate(180deg);
            color: #14B8A6;
        }
        100% {
            transform: rotate(360deg);
            color: inherit;
        }
    }

    .animate-spin-and-fade {
        animation: spinAndFade 1s ease-in-out;
    }
</style>
<script>
    function copyToClipboard(text, iconId) {
        navigator.clipboard.writeText(text).then(() => {
            const icon = document.getElementById(iconId);
            icon.classList.add('animate-spin-and-fade');
            setTimeout(() => {
                icon.classList.remove('animate-spin-and-fade');
            }, 1000);
        }).catch(err => {
            console.error('Failed to copy text: ', err);
        });
    }
</script>
