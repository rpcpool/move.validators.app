<%= form_with(model: @validator, local: true) do |form| %>
  <div class="space-y-12 text-gray-500 dark:text-gray-100">
    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold leading-7">Profile</h2>
      <p class="mt-1 text-sm leading-6">This information will be displayed publicly so be careful what you share.</p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

        <div class="col-span-full">
          <%= form.label :name, "Name", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :name, class: 'block w-full rounded-md border-0 py-1.5 placeholder:text-gray-400 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="col-span-full">
          <%= form.label :network, "Network", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <div class="block w-full rounded-md border-0 py-1.5 placeholder:text-gray-400 sm:text-sm sm:leading-6">
              <%= Rails.application.config.onchain_network %>
            </div>
          </div>
        </div>

        <div class="col-span-full">
          <%= form.label :avatar, "Photo", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2 flex items-center gap-x-3">
            <% if @validator.avatar.attached? %>
              <%= image_tag @validator.avatar, class: 'h-12 w-12 rounded-full' %>
            <% elsif @validator.avatar_url.present? %>
              <%= image_tag @validator.avatar_url, class: 'h-12 w-12 rounded-full' %>
            <% else %>
              <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd"/>
              </svg>
            <% end %>
            <%= form.file_field :avatar, class: 'rounded-md px-2.5 py-1.5 text-sm font-semibold' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :validator_index, "Validator Index", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.number_field :validator_index, class: 'block w-full rounded-md border-0 py-1.5 sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :address, "Address", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :address, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :voting_power, "Voting Power", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :voting_power, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :consensus_public_key, "Consensus Public Key", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :consensus_public_key, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :fullnode_address, "Fullnode Address", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :fullnode_address, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :network_address, "Network Address", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :network_address, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :domain, "Domain", class: 'block text-sm font-medium leading-6 ' %>
          <div class="mt-2">
            <%= form.text_field :domain, class: 'block w-full rounded-md border-0 py-1.5  sm:text-sm sm:leading-6' %>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
      <%= link_to 'Cancel', validators_path, class: 'text-sm font-semibold leading-6 ' %>
      <%= form.submit 'Save', class: 'rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
    </div>
  </div>
<% end %>
